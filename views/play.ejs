<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Trunfo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="play.service.js"></script>
    <link rel="stylesheet" type="text/css" rel="noopener" target="_blank" href="default.css">
</head>

<body class="text-center bg-stone-800">
    <div class="w-full text-5xl mt-10">
        SUPER HERO TRUNFO GAME
    </div>

    <div class="mt-5 w-5/6 flex justify-center mx-auto p-5 text-2xl">
        <div class="w-2/5 flex flex-wrap justify-center">
            <span id="p1Score"></span>
        </div>
        <div class="w-1/5"></div>
        <div class="w-2/5 flex flex-wrap justify-center">
            <span id="p2Score"></span>
        </div>
    </div>

    <div class="w-11/12 flex justify-center mx-auto items-start p-5 text-2xl">
        <div class="w-2/5 flex flex-wrap justify-center">
            <div class="border flex flex-wrap items-end" style="width: 256px; height: 384px">
                <img class="w-full" id="p1HeroImg">
                <div
                    class="w-full flex justify-between text-sm h-32 -mt-32 bg-black/30 backdrop-blur-sm hideable-attributes-p1">
                    <div class="w-1/2 text-left">
                        Inteligência<br>
                        Força<br>
                        Velocidade<br>
                        Durabilidade<br>
                        Poder<br>
                        Combate<br>
                    </div>
                    <div class="w-1/2 text-right">
                        <span id="p1Hero-intelligence"></span><br>
                        <span id="p1Hero-strength"></span><br>
                        <span id="p1Hero-speed"></span><br>
                        <span id="p1Hero-durability"></span><br>
                        <span id="p1Hero-power"></span><br>
                        <span id="p1Hero-combat"></span><br>
                    </div>
                </div>
                <span id="p1HeroName"></span>
            </div>
        </div>

        <div class="w-1/5 flex flex-wrap justify-center">
            <button class="w-40 border px-2 init" onclick="initGame()">
                Começar
            </button>

            <div class="text-sm hideable-select">
                <select class="mt-5 bg-stone-800 border-b" placeholder="Escolha um atributo" id="heroAttributesSelect">
                    <option selected>Escolha um atributo</option>
                    <option value="intelligence">Inteligência</option>
                    <option value="strength">Força</option>
                    <option value="speed">Velocidade</option>
                    <option value="durability">Durabilidade</option>
                    <option value="power">Poder</option>
                    <option value="combat">Combate</option>
                </select>
            </div>

            <button class="w-40 border px-2 mt-4 hideable-next" onclick="nextRound()">
                Próxima rodada
            </button>
            <button class="w-40 border px-2 mt-4 hideable-compare" onclick="compareCards()">
                Comparar
            </button>

            <div class="hideable-p1-winner mt-5">
                P1 GANHOU
            </div>
            <div class="hideable-p2-winner mt-5">
                P2 GANHOU
            </div>
            <div class="hideable-draw mt-5">
                EMPATE
            </div>

            <div class="mt-10 hideable-endgame">
                ACABOU O JOGO!
            </div>
        </div>

        <div class="w-2/5 flex flex-wrap justify-center">
            <div class="border flex flex-wrap items-end" style="width: 256px; height: 384px">
                <img id="p2HeroImg">
                <div
                    class="w-full flex justify-between text-sm h-32 -mt-32 bg-black/30 backdrop-blur-sm hideable-attributes">
                    <div class="w-1/2 text-left">
                        Inteligência<br>
                        Força<br>
                        Velocidade<br>
                        Durabilidade<br>
                        Poder<br>
                        Combate<br>
                    </div>
                    <div class="w-1/2 text-right">
                        <span id="p2Hero-intelligence"></span><br>
                        <span id="p2Hero-strength"></span><br>
                        <span id="p2Hero-speed"></span><br>
                        <span id="p2Hero-durability"></span><br>
                        <span id="p2Hero-power"></span><br>
                        <span id="p2Hero-combat"></span><br>
                    </div>
                </div>
                <span id="p2HeroName"></span>
            </div>
        </div>
    </div>
    <button class="w-40 mt-5 mx-auto py-3" onclick="toHome()">
        Voltar
    </button>
</body>

</html>